/* pages/home/home.wxss */

@import "./home.skeleton.wxss";

page {
    background-color: var(--page-backgroung-color);
}

swiper {
    width: 100%;
    height: 400rpx;
}

.banner-image {
    width: 100%;
    height: 100%;
}

.banner-title-container {
    position: absolute;
    top: 320rpx;
    padding: 0 15rpx;
    display: flex;
    align-items: center;
    color: var(--text-color);
    background: rgba(0, 0, 0, 0.5);
    width: 100%;
    height: 80rpx;
}

.banner-title {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    text-overflow: ellipsis;
    overflow: hidden;
}

.cell {
    padding: 13rpx 25rpx;
    background-color: var(--cell-background-color);
}

.cell:not(:last-child) {
    border-bottom: 1rpx solid var(--divider-line-color);
}

.tag {
    color: var(--tags-color);
}

.fresh {
    color: var(--marked-tag-color);
    margin-right: 15rpx;
}

.date {
    flex: 1;
    display: flex;
    flex-direction: row-reverse;
    margin-left: 15rpx;
}

.title {
    margin: 12rpx 0;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    text-overflow: ellipsis;
    overflow: hidden;
}

.top {
    color: #eb8242;
    margin-right: 15rpx;
}

.state {
    flex: 1;
    display: flex;
    flex-direction: row-reverse;
}

.state > text {
    font-size: 40rpx;
    color: var(--collection-state-color);
}

.tags {
    display: flex;
    font-size: 25rpx;
    align-items: center;
}

@media(prefers-color-scheme: dark) {
    page {
        background-color: var(--page-backgroung-color-dark);
    }

    .cell {
        background-color: var(--cell-background-color-dark);
    }

    .cell:not(:last-child) {
        border-bottom: 1rpx solid var(--divider-line-color-dark);
    }

    .title {
        color: var(--text-color-dark);
    }

    .banner-title-container {
        color: var(--text-color-dark);
        background: rgba(0, 0, 0, 0.7);
    }
}