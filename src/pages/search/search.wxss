/* pages/search/search.wxss */

page {
    background-color: var(--page-backgroung-color);
    height: 100%;
}

.search-bar-bg {
    background-color: #eaeaea;
    box-sizing: border-box;
    padding: 15rpx;
    display: flex;
    border-radius: 2rpx;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 99;
}

.search-bar-container {
    border-radius: 2rpx;
    display: flex;
    align-items: center;
    width: 100%;
    height: 100%;
    flex: 1;
    background-color: white;
}

.icon-container {
    text-align: center;
    margin-left: 10rpx;
}

.icon-container > text {
    font-size: 40rpx;
    color: gray;
}

.input-container {
    margin-left: 10rpx;
    height: 100%;
    flex: 1;
}

.cancel {
    display: flex;
    align-items: center;
    margin-left: 20rpx;
}

.cells {
    background: #ffffff;
    margin-top: 20rpx;
}

.cell {
    display: flex;
    padding: 20rpx;
}

.cell:not(:last-child) {
    border-bottom: 1rpx solid var(--divider-line-color);
}

.cell__bd {
    flex: 1;
}

.cell__bd .name {
    height: 80rpx;
    font-size: 30rpx;
    margin-bottom: 12rpx;
}

.cell__bd .name>view {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    word-break: break-all;
}

.cell__bd .tags {
    display: flex;
    align-items: center;
}

.cell__bd .tags .tags__bd {
    flex: 1;
    display: flex;
    flex-direction: row-reverse;
}

.tags__bd > text {
    font-size: 40rpx;
    color: var(--collection-state-color);
}

/* .collect_state {
    width: 40rpx;
    height: 40rpx;
} */

.cell__bd .tags .date {
    color: #777777;
    font-size: 24rpx;
}

.search-history {
    margin-top: 50px;
    display: flex;
    flex-wrap: wrap;
    max-height: 260rpx;
    padding: 30rpx;
}

.search-item {
    margin: 0 20rpx 20rpx 0;
    padding: 10rpx;
    background-color: var(--cell-background-color);
    font-size: smaller;
    border: 1px solid var(--divider-line-color-dark);
    border-radius: 12rpx;
    height: 36rpx;
}

.btn-clear-record {
    font-size: smaller;
    color: var(--text-color-dark);
    line-height: 50rpx;
    text-align: center;
}

@media(prefers-color-scheme: dark) {
    page,
    .search-bar-container {
        background-color: var(--page-backgroung-color-dark);
    }

    .search-bar-bg {
        background-color: #232426;
    }

    .search-item,
    .cancel,
    .name {
        color: var(--text-color-dark);
    }

    .date {
        color: var(--tags-color);
    }

    .search-item,
    .cells {
        background-color: var(--cell-background-color-dark);
    }

    .cell:not(:last-child) {
        border-bottom: 1rpx solid var(--divider-line-color-dark);
    }
}