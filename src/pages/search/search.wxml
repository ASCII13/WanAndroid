<!--pages/search/search.wxml-->

<view class="search-bar-bg" style="height: {{height}}px;">
    <view class="search-bar-container">
        <view class="icon-container">
			<text class="iconfont icon-search"></text>
        </view>
        <input class="input-container" 
            bindblur="loseFocus" 
            bindfocus="getFocus"
            confirm-type="search"
            bindinput="inputContent"
            bindconfirm="search"
            placeholder="当前搜索{{searchCategory}}公众号, 请输入搜索词">
        </input>
    </view>
    <view class="cancel" hidden="{{hideCancel}}">取消</view>
</view>

<view wx:if="{{!showResult && searchRecords.length > 0}}">
	<view class="search-history">
		<view class="search-item" wx:for="{{searchRecords}}" wx:key="index" data-content="{{item.name}}" catchtap="onTapRecord">{{item.name}}</view>
	</view>
	<view class="btn-clear-record" catchtap="onTapClearRecord">清除所有历史记录</view>
</view>

<list wx:if="{{showResult}}" 
	show-empty="{{emptyShow}}"
    empty-text="暂无结果"
    end="{{end}}"
    list-count="{{listData.length}}"
    enable-back-to-top="{{enableBackToTop}}"
    bind:more="more">
    <view class="cells" style="margin-top: {{height}}px;" bindtap="test">
		<view class="cell"	
			wx:for="{{listData}}"
			wx:key="index"
			data-link="{{item.link}}"
			bindtap="showArticle">
			<view class="cell__bd">
				<view class="name">
					<rich-text nodes="{{item.title}}"></rich-text>
				</view>
				<view class="tags">
					<view class="date">{{item.niceDate}}</view>
					<view class="tags__bd">
						<text class="iconfont {{item.collect ? 'icon-collected' : 'icon-uncollect'}}"
							catchtap="collect"
							data-id="{{item.id}}"
							data-index="{{index}}">
						</text>
					</view>
				</view>
			</view>
		</view>
	</view>
</list>