/* pages/mine/mine.wxss */

page {
    height: 100vh;
}

.mine-container {
    background-color: #F7F7F7;
    height: 100%;
}

.header-background {
    width: 100%;
    height: 200rpx;
    background-color: var(--login-header-color);
    border-radius: 0 0 35rpx 35rpx;
}

.personal-msg {
    height: 200rpx;
    background-color: white;
    position: absolute;
    top: 60rpx; 
    left: 40rpx;
    right: 40rpx;

    display: flex;
    align-items: center;

    border-radius: 11rpx;
}

.head-icon {
    height: 120rpx;
    width: 120rpx;
    margin-left: 60rpx;
    border-radius: 60rpx;
}

.account-info {
    display: flex;
    flex-direction: column;
    margin-left: 30rpx;
}

.not-logged-in {
    font-size: 32rpx;
}

.personal-feature {
    background-color: white;
    margin: 90rpx 40rpx 0rpx 40rpx;
    border-radius: 11rpx;

    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
    align-content: space-evenly;
}

.feature-item {
    height: 150rpx;
    width: 170rpx;
    padding: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.feature-icon {
    height: 64rpx;
    width: 64rpx;
}

.feature-description {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 10rpx;
    font-size: 28rpx;
}

@media(prefers-color-scheme: dark) {
    .header-background {
        background-color: #318c7a;
    }

    .mine-container {
        background-color: var(--page-backgroung-color-dark);
    }

    .personal-msg,
    .personal-feature {
        background-color: var(--cell-background-color-dark);
        color: var(--text-color-dark);
    }

}