/* pages/login/login.wxss */

page {
    height: 100vh;
    width: 100%;
    background-color: #F7F7F7;
}

.header-background {
    width: 100%;
    height: 350rpx;
    background-color: #48C9B0;
}

.logo-area {
    position: absolute;
    top: 55rpx;
    left: 40rpx;
    right: 40rpx;
    height: 200rpx;

}

.img-logo {
    width: 100%;
    height: 100%;
}

.login-panel {
    position: absolute;
    height: 300rpx;
    top: 250rpx;
    left: 40rpx;
    right: 40rpx;
    background-color: white;
    border-radius: 11rpx;

    display: flex;
    flex-direction: column;
    justify-content: center;
}

.account-area, .password-area {
    margin: 0 40rpx;
    height: 100rpx;
    border-bottom: 0.5rpx solid #C0C0C0;

    display: flex;
    flex-direction: row;
    align-items: center;
}

.btn-login {
    color: white;
    margin: 230rpx 40rpx 0 40rpx; 
    height: 100rpx;
    
    display: flex;
    justify-content: center;
    align-items: center;

    border-radius: 11rpx;
}

.btn-enable-login {
    background-color: #48C9B0;
}

.btn-disable-login {
    background-color: #DBDCDE;
}

.btn-register {
    color: #9E9E9E;
    background-color: #F7F7F7;
    font-size: 25rpx;
    margin: 10rpx 40rpx 0 40rpx;

    display: flex;
    flex-direction: row-reverse;
}

