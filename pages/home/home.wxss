/* pages/home/home.wxss */

page {
    background-color: #F7F7F7;
}

swiper {
    width: 100%;
    height: 400rpx;
}

.banner-image {
    width: 100%;
    height: 100%;
}

.banner-title-container {
    position: absolute;
    top: 320rpx;
    padding: 0 15rpx;
    display: flex;
    align-items: center;
    color: white;
    background: rgba(0, 0, 0, 0.5);
    width: 100%;
    height: 80rpx;
}

.banner-title {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    text-overflow: ellipsis;
    overflow: hidden;
}

.cell {
    padding: 13rpx 25rpx;
    background-color: white;
}

.cell:not(:last-child) {
    border-bottom: 1rpx solid #cecece;
}

.tag {
    color: #777777;
}

.fresh {
    color: #e6a157;
    margin-right: 15rpx;
}

.date {
    flex: 1;
    display: flex;
    flex-direction: row-reverse;
    margin-left: 15rpx;
}

.title {
    margin: 12rpx 0;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    text-overflow: ellipsis;
    overflow: hidden;
}

.top {
    color: #eb8242;
    margin-right: 15rpx;
}

.state {
    flex: 1;
    display: flex;
    flex-direction: row-reverse;
}

image {
    width: 40rpx;
    height: 40rpx;
}

.tags {
    display: flex;
    font-size: 25rpx;
    align-items: center;
}