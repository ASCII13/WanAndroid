/* pages/collectarticles/collectarticles.wxss */

page {

    background-color: #F7F7F7;

    --chapter-color: #eb8242;
    --tags-font-size: 24rpx;
    --title-font-size: 30rpx;
}

side-slip:not(:last-child) .cell {
    border-bottom: 1rpx solid #cecece;
}

.cells {
    background-color: white;
}

.cell {
    padding: 20rpx;
}

.title {
    font-size: var(--title-font-size);
    margin-bottom: 12rpx;
    height: 80rpx;

    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    word-break: break-all;
}

.tags {
    display: flex;
    align-items: center;
}

.chapter {
    border: 1rpx solid var(--chapter-color);
    color: var(--chapter-color);
    border-radius: 5rpx;
    font-size: var(--tags-font-size);
    padding: 6rpx;
}

.date {
    flex: 1;
    display: flex;
    flex-direction: row-reverse;
    font-size: var(--tags-font-size);
}
