/* pages/collectarticles/collectarticles.wxss */

page {
    background-color: var(--page-backgroung-color);
}

side-slip:not(:last-child) .cell {
    border-bottom: 1rpx solid var(--divider-line-color);
}

.cells {
    background-color: var(--cell-background-color);
}

.cell {
    padding: 20rpx;
}

.title {
    margin-bottom: 12rpx;
    height: 80rpx;

    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    word-break: break-all;
}

.tags {
    display: flex;
    align-items: center;
    font-size: var(--tags-font-size);
}

.chapter {
    border: 1rpx solid var(--marked-tag-color);
    color: var(--marked-tag-color);
    border-radius: 5rpx;
    padding: 6rpx;
}

.date {
    flex: 1;
    display: flex;
    flex-direction: row-reverse;
}

@media(prefers-color-scheme: dark) {
    page {
        background-color: var(--page-backgroung-color-dark);
    }

    .cells {
        background-color: var(--cell-background-color-dark);
    }

    side-slip:not(:last-child) .cell {
        border-bottom: 1rpx solid var(--divider-line-color-dark);
    }

    .title {
        color: var(--text-color-dark);
    }

    .date{
        color: var(--tags-color);
    }
}