/* pages/mine/mine.wxss */

page {
    height: 100vh;
}

.mine-container {
    background-color: #F7F7F7;
    height: 100%;
}

.header-background {
    width: 100%;
    height: 200rpx;
    background-color: #48C9B0;
    border-radius: 0 0 35rpx 35rpx;
}

.personal-msg {
    height: 200rpx;
    background-color: white;
    position: absolute;
    top: 60rpx; 
    left: 40rpx;
    right: 40rpx;

    display: flex;
    align-items: center;

    border-radius: 11rpx;
}

.head-icon {
    height: 120rpx;
    width: 120rpx;
    margin-left: 60rpx;
    border-radius: 60rpx;
}

.account-info {
    display: flex;
    flex-direction: column;
    margin-left: 30rpx;
}

.personal-feature {
    background-color: white;
    height: 550rpx;
    margin: 90rpx 40rpx 0rpx 40rpx;
    border-radius: 11rpx;

    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
    align-content: space-around;
}

.to-do {
    height: 170rpx;
    width: 170rpx;
}

.feature-icon {
    height: 170rpx;
    width: 170rpx;
}

.feature-description {
    display: flex;
    align-items: center;
    justify-content: center;
}