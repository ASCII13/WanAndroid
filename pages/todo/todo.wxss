/* pages/todolist/todolist.wxss */

page {
    background: var(--page-backgroung-color);
}

swiper {
    height: 100vh;
}

.tab-wrap {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    background-color: var(--cell-background-color);
    z-index: 99;
    box-shadow: 0 0 20rpx -5rpx rgba(0, 0, 0, 0.1);
}

.cells {
    background: #ffffff;
    margin-top: 20rpx;
}

.cell {
    display: flex;
    flex-direction: column;
}

.categoty {
    display: flex;
    padding: 20rpx;
    border-bottom: 1rpx solid #ebedf0;
}

.detail {
    padding: 20rpx;
    display: flex;
    flex-direction: column;
}

.cell:not(:last-child),
.detail:not(:last-child) {
    border-bottom: 1rpx solid #ebedf0;
}

.title-container {
    display: flex;
    align-items: center;
}

.title {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;

    margin-right: 10rpx;
    font-size: 34rpx;
}

.delete-container {
    flex: 1;
    display: flex;
    align-items: center;
    flex-direction: row-reverse;
}

.delete {
    color: gray;
}

.content-container {
    padding: 10rpx 55rpx 0rpx;
}

.content {
    color: gray;
}

/* .cell:not(:last-child) {
    border-bottom: 1rpx solid #ebedf0;
} */

.cell_bd {
    flex: 1;
}

.cell_bd .time {
    height: 50rpx;
    font-size: 30rpx;
    display: flex;
    align-items: center;
}

.cell_bd .time .arrow_container {
    flex: 1;
    display: flex;
    flex-direction: row-reverse;
}

.arrow {
    font-size: 35rpx;
}

.create-todo {
    position: absolute;
    bottom: 200rpx;
    right: 40rpx;
    font-size: 70rpx;
    color: #366ed8;
}

@media(prefers-color-scheme: dark) {
    page {
        background-color: var(--page-backgroung-color-dark);
    }

    .tab-wrap,
    .cells {
        background-color: var(--cell-background-color-dark);
    }

    .categoty {
        color: var(--text-color-dark);
    }

    .cell:not(:last-child),
    .detail:not(:last-child) {
        border-bottom: 1rpx solid var(--divider-line-color-dark);
    }

    .create-todo {
        color: #264d99;
    }
}